<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script type="text/javascript" src="scripts/general.js"></script>
    <script type="text/javascript" src="scripts/search.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Inconsolata"
    />
    <link rel="stylesheet" href="styles/extensions.css">
  </head>
  <body>
    <div class="w3-container" id="where" style="padding-bottom: 32px">
      <div class="w3-content" style="max-width: 700px">
        <%- include ('menu.ejs') %>
        </iframe>
        <h1 id="titulo">Search for a film info</h1>
        <h3 id="subtitulo"></h3>
        <h4 id="errorText" style="color: red"></h4>
        <form
          class="w3-input w3-padding-16 w3-border"
          action="/search"
          method="post"
        >
          <div class="autocomplete" style="width:100%">
              Film:
              <input
                class="w3-input w3-padding-16 w3-border"
                id="film"
                name="film"
                value=""
                onkeyup="findFilm()"
              />
          </div>
          <br /><br />
          Title:
          <input
            class="w3-input w3-padding-16 w3-border"
            id="title"
            name="title"
            value=""
            disabled=true
          />
          <br />
          Year:
          <input
            type="number"
            class="w3-input w3-padding-16 w3-border"
            id="year"
            name="year"
            value=""
            disabled=true
          />
          <br />
          <p>
            <input
              class="w3-button w3-black"
              type="button"
              value="Submit"
              onclick="doIt(false)"
            />
          </p>
        </form>
      </div>
    </div>
    <div class="w3-container" id="where" style="padding-bottom: 32px">
      <div class="w3-content" id="parsersList" style="max-width: 700px">
        <h3 id="results">Results</h3>
        <span id="cachedText" style="color: blue"> </span> <input class="w3-button w3-black" type="button" value="Refresh" id="refreshButton" onclick="doIt(true)">
        <!-- Parser list here (dinamycally loaded) -->
      </div>
    </div>

    <script>
      // Cargar la info
      loadInfo();
    </script>
  </body>
</html>
